@using Blog.Entity.DTOs.Categories;
@model CategoryAddDto

<div class="content-wrapper">

    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">


        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Kategori Yönetimi /</span> Kategori Ekle
        </h4>

        <form asp-area="Admin" asp-controller="Category" asp-action="Add" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-4">
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Name" for="defaultFormControlInput" class="form-label">Kategori Ismi</label>
                                <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Kategori Giriniz" aria-describedby="defaultFormControlHelp">
                                <span asp-validation-for="Name" class="text-danger small"></span>

                            </div>


                            <div class="form-group">
                                <button type="submit" class="col-1 btn btn-primary block float-end"> Kaydet</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
