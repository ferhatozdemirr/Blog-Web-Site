

@model UserUpdateDto

<div class="content-wrapper">

    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">


        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Güncelle
        </h4>

        <form asp-area="Admin" asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" style="color:red"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-4">
                        <div class="card-body">


                            <div class="form-group">
                                <label asp-for="FirstName" for="defaultFormControlInput" class="form-label">Kullanıcının İsmi</label>
                                <input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Kullanıcının İsmini Giriniz" aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName" for="defaultFormControlInput" class="form-label">Kullanıcının Soyİsmi</label>
                                <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Kullanıcının Soyismini Giriniz" aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" for="defaultFormControlInput" class="form-label"> Kullanıcının Email Address</label>
                                <input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Kullanıcının Mail Adresinizi Giriniz" aria-describedby="defaultFormControlHelp">
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNumber" for="defaultFormControlInput" class="form-label"> Kullanıcının Telefon Numarası </label>
                                <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Kullanıcının Telefonunuzu Giriniz" aria-describedby="defaultFormControlHelp">
                            </div>

                            <div class="form-group">
                                <label asp-for="RolId" for="defaultFormControlInput" class="form-label"> Kullanıcının Rolü </label>
                                <select asp-for="RolId" class="form-label w-100 " style="height:2.5em" asp-items="@( new SelectList(Model.Roles,"Id","Name"))"></select>
                            </div>


                            <div class="form-group">
                                <button type="submit" class="col-1 btn btn-primary block float-end"> Kaydet</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
